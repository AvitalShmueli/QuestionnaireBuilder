<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionResponseActivity">

  <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/topAppBar"
      app:menu="@menu/toolbar_menu_profile"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="?attr/android:statusBarColor"
      android:backgroundTint="@color/light_blue"
      android:titleTextColor="@android:color/black"
      app:navigationIcon="@drawable/arrow_back_24px"
      app:titleCentered="true"
      android:elevation="@dimen/toolbar_elevation"
      app:titleTextColor="?attr/colorOnSurface"
      app:navigationIconTint="?attr/colorOnSurface"
      app:titleTextAppearance="@style/Custom.Widget.Toolbar.TitleStyle"
      android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


  <FrameLayout
      android:id="@+id/questionResponse_FRAME_question"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/topAppBar"/>

  </RelativeLayout>