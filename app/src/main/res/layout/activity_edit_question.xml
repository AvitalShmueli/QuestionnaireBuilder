<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditQuestionActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        app:menu="@menu/top_app_bar_menu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/android:statusBarColor"
        android:backgroundTint="@color/light_blue"
        android:titleTextColor="@android:color/black"
        app:navigationIcon="@drawable/arrow_back_24px"
        app:title="New Question"
        app:titleCentered="true"
        android:elevation="@dimen/toolbar_elevation"
        app:titleTextColor="@color/blackish"
        app:titleTextAppearance="@style/toolbarTextStyle"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/editQuestion_LBL_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/topAppBar"
        android:text="Type"
        android:gravity="center"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"/>

    <FrameLayout
        android:id="@+id/editQuestion_FRAME_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/editQuestion_LBL_type"/>


</RelativeLayout>