<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottomNavIndicator" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_blue</item>
    </style>

    <style name="AppPopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/light_blue</item>
    </style>

    <!-- MaterialToolbar-->
    <style name="Custom.Widget.Toolbar.TitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
    </style>

    <style name="Custom.Widget.Toolbar.SubtitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/toolbar_subtitle_size</item>
    </style>

    <style name="Custom.Widget.Toolbar.MenuText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!--TODO: if app support RTL enable paddingEnd, otherwise paddingRight-->
        <!--item name="android:paddingEnd">@dimen/toolbar_text_horizontal_padding</item-->
        <item name="android:paddingRight">@dimen/toolbar_text_horizontal_padding</item>
    </style>

    <!-- ShapeableImageView-->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="PillShapeFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="shapeAppearance">@style/PillShapeAppearance</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PillShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>

    </style>


    <style name="CustomRatingBarHearts" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_heart_selector</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="CustomRatingBarThumbUp" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_thumb_up_selector</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="DetailRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>